<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contact_row_height">

    <ImageView
        android:transitionName="@string/contact_image_transition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_contact"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/contact_row_image_margin_left"
        android:id="@+id/image_view_city" />

    <TextView
        android:transitionName="@string/contact_name_transition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carlos Lopez"
        android:layout_marginLeft="@dimen/contact_row_name_margin_left"
        android:textSize="@dimen/contact_row_name_text_size"
        android:id="@+id/text_view_city_name_value"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/image_view_city" />

</RelativeLayout>